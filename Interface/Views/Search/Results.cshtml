@model IEnumerable<Shared.Models.WebsiteInfo>

@{
    ViewData["Title"] = "Search results";
}


<div>

    @{ await Html.RenderPartialAsync("_InputSearchPartial", ViewData["SearchedContent"]); }

</div>

<div class="container body-content">

    <h2>Search results for @ViewData["SearchedContent"]</h2>

    @foreach (var item in Model)
    {
        <div class="result-card p-2">

            <div class="row">

                <div class="col-md-6">
                    <h5 class="overflowed-text">
                        @Html.DisplayFor(modelItem => item.Title)
                    </h5>
                </div>

            </div>

            <div class="row">

                <div class="col-md-12">
                    <div class="overflowed-text">
                        @Html.DisplayFor(modelItem => item.DescriptionMeta)
                    </div>
                </div>

            </div>

            <div class="row mb-3">

                <div class="col-md-10">
                    <a href="@item.Url">
                        <div class="overflowed-text">
                            @item.Url
                        </div>
                    </a>
                </div>

                <div class="col-md-2">
                    @* @Html.DisplayFor(modelItem => item.CreateDate) *@
                </div>

            </div>

        </div>
    }

</div>