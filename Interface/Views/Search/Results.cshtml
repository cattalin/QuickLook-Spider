@model Nest.ISearchResponse<Shared.Models.WebsiteInfo>

@{
    ViewData["Title"] = "Search results";
}


<div>

    @{ await Html.RenderPartialAsync("_InputSearchPartial", ViewData["SearchedContent"]); }

</div>

<div class="container body-content">

    <h2>Search results for @ViewData["SearchedContent"]</h2>

    @foreach (var result in Model.Hits)
    {
        <div class="result-card p-2">

            <div class="row">

                <div class="col-md-6">
                    <h5 class="overflowed-text">
                        @Html.DisplayFor(modelItem => result.Source.Title)
                    </h5>
                </div>

            </div>

            <div class="row">

                <div class="col-md-12">
                    <div class="overflowed-text">
                        @Html.DisplayFor(modelItem => result.Source.DescriptionMeta)
                    </div>
                </div>

            </div>

            <div class="row mb-3">

                <div class="col-md-10">
                    <a href="@result.Source.Url">
                        <div class="overflowed-text">
                            @result.Source.Url
                        </div>
                    </a>
                </div>

                <div class="col-md-2">
                    @* @Html.DisplayFor(modelItem => result.Source.CreateDate) *@
                </div>

            </div>
                
                @foreach (var highlight in result.Highlights.First().Value.Highlights.ToList())
                {
                    
                    <div class="col-md-12">

                        @Html.Raw(highlight)
                        
                    </div>

                }
            
        </div>
    }

</div>